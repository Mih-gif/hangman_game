{
    "name": "mihgif/hangman",
    "description": "Hangman game in PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Mih-gif",
            "email": "mihailgoo7@yandex.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "wp-cli/php-cli-tools": "^0.12.5"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "mihgif\\hangman\\": "src/"
        }
    },
    "bin": [
        "bin/hangman"
